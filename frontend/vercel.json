{
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://seu-backend-api.com/api/:path*"
    }
  ],
  "build": {
    "env": {
      "REACT_APP_API_URL": "/api"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" }
      ]
    }
  ]
}
